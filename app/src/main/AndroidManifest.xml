<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.innovach.echeckin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Check-in List"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".qr.ReaderActivity" />
        <activity android:name=".qr.GeneratorActivity" />
        <activity
            android:name=".moringa.MoringaMainActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity android:name=".moringa.moringagroups.MC2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.innovach.echeckin.moringa.MoringaMainActivity"></meta-data>
        </activity>
        <activity android:name=".moringa.moringagroups.MC3Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.innovach.echeckin.moringa.MoringaMainActivity"></meta-data>
        </activity>
        <activity android:name=".moringa.moringagroups.MPFTActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.innovach.echeckin.moringa.MoringaMainActivity"></meta-data>
        </activity>
        <activity android:name=".moringa.moringagroups.MPPTActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.innovach.echeckin.moringa.MoringaMainActivity"></meta-data>
        </activity>
        <activity android:name=".moringa.AdminMainActivity"></activity>
    </application>

</manifest>